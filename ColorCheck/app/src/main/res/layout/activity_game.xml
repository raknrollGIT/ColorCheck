<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="git_lab.colorcheck.Game">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="217dp"
            android:layout_height="51dp"
            android:layout_above="@+id/ColorName"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="46dp" />

        <ImageButton
            android:id="@+id/LD"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/white"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="179dp"
            android:layout_alignTop="@+id/LG"
            android:layout_alignStart="@+id/PG" />

        <ImageButton
            android:id="@+id/PD"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/white"
            tools:layout_editor_absoluteX="206dp"
            tools:layout_editor_absoluteY="179dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/LG" />

        <ImageButton
            android:id="@+id/LG"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="27dp"
            app:srcCompat="@drawable/white"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="375dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/PG"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/white"
            tools:layout_editor_absoluteX="206dp"
            tools:layout_editor_absoluteY="375dp"
            android:layout_alignTop="@+id/PD"
            android:layout_alignEnd="@+id/Licznik" />

        <TextView
            android:id="@+id/ColorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="ColorName"
            android:textSize="70px"
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="97dp"
            android:layout_above="@+id/LD"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/Licznik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progressBar2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="11dp"
            android:text="Count"
            android:textSize="40px"
            tools:layout_editor_absoluteX="315dp"
            tools:layout_editor_absoluteY="16dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
