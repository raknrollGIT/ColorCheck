<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="git_lab.colorcheck.gameOver">

    <RelativeLayout
        android:layout_width="384dp"
        android:layout_height="558dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="4dp">

        <TextView
            android:id="@+id/GameOver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:lineSpacingExtra="12sp"
            android:text="@string/game_over"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="55sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="655dp" />

        <Button
            android:id="@+id/ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/menu"
            android:layout_below="@+id/wWynik"
            android:layout_marginTop="30dp"
            android:onClick="openRanking"
            android:text="@string/ranking"

            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="217dp" />

        <Button
            android:id="@+id/again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:onClick="openGame"
            android:text="@string/play_again"
            android:textAlignment="textStart"
            tools:layout_editor_absoluteX="140dp"
            tools:layout_editor_absoluteY="299dp" />

        <Button
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ranking"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:onClick="openmenu"
            android:text="@string/menu"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="382dp" />

        <TextView
            android:id="@+id/wWynik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/GameOver"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:text="@string/your_score"
            android:textSize="60px" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
